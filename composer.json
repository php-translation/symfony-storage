{
    "name": "php-translation/symfony-storage",
    "description": "A translation file storage using Symfony translation component.",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "php-translation/common": "^1.0",
        "symfony/translation": "^3.4 || ^4.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^3.4 || ^4.0",
        "symfony/framework-bundle": "^3.4 || ^4.0"
    },
    "autoload": {
        "psr-4": {
            "Translation\\SymfonyStorage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Translation\\SymfonyStorage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/simple-phpunit",
        "test-ci": "vendor/bin/simple-phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
